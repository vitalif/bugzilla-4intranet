[%# INTERFACE:
  # title: string. The title for this page. (optional)
  #%]

[% DEFAULT title = "$terms.Bug List" %]
[% USE Bugzilla %]

<html>

  <head>
    <title>[% title FILTER html %]</title>
    <base href="[% urlbase FILTER html %]" [% IF Bugzilla.cgi.param('target') == '_blank' %] target="_blank"[% END %] />
    <link href="skins/standard/buglist.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" language="JavaScript" src="js/resize-iframe.js"></script>
  </head>

  <body>
    [% IF bugs.size == 0 %]
      <h3>[% terms.zeroSearchResults %].</h3>
    [% ELSE %]
      [% PROCESS list/table.html.tmpl %]
    [% END %]
  </body>

</html>
