[% PROCESS global/header.html.tmpl
  title = "Select classification"
%]

<table class="admin_table">
  <tr>
    <th align="left">Edit&nbsp;Classification...</th>
    <th align="left">Description</th>
    <th align="left">Sortkey</th>
    <th align="left">Products</th>
    <th align="left">Action</th>
  </tr>

  [% FOREACH cl = values %]
    <tr class="[% loop.index % 2 ? "even_row" : "odd_row" %]">
      <td valign="top"><a href="editvalues.cgi?action=edit&class=classification&id=[% cl.id %]"><b>[% cl.name | html %]</b></a></td>
      <td valign="top">
      [% IF cl.description %]
        [% cl.description | html_light %]
      [% ELSE %]
        <font color="red">none</font>
      [% END %]
      </td>
      <td valign="top">[% cl.sortkey | html %]</td>
      [% IF (cl.id == 1) %]
        <td valign="top">[% cl.product_count | html %]</td>
      [% ELSE %]
        <td valign="top"><a href="editclassifications.cgi?action=reclassify&classification=[% cl.name | url_quote %]">reclassify ([% cl.product_count | html %])</a></td>
      [% END %]

      [%# don't allow user to delete the default id. %]
      [% IF (cl.id == 1) %]
        <td valign="top">&nbsp;</td>
      [% ELSE %]
        <td valign="top"><a href="editvalues.cgi?action=del&class=classification&id=[% cl.id %]">delete</a></td>
      [% END %]
    </tr>
  [% END %]
</table>

<p><a href="editclassifications.cgi?action=add">Add a new classification</a></p>

[% PROCESS global/footer.html.tmpl %]
