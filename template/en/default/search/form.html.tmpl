[% BLOCK select %]
  <td align="left">
    <select name="[% sel.name | html %]" id="[% sel.name | html %]"
            multiple="multiple" size="[% sel.size %]">
      [% FOREACH value = Bugzilla.get_field(sel.name).legal_value_names %]
        <option value="[% value OR '---' FILTER html %]"
          [% " selected" IF lsearch(default.${sel.name}, value) != -1 %]>
          [% display_value(sel.name, value) FILTER html
        %]</option>
      [% END %]
    </select>
    <script>
      checkwidths.push('[% sel.name | js %]');
    </script>
  </td>
[% END %]
