[%# INTERFACE:
  # classifications: an array of classification objects containing
  #                  at least one product accessible by the user.
  # cloned_bug_id: ID of the bug being cloned.
  # cloned_comment: ID of the comment being cloned.
  #%]

[% IF target == "enter_bug.cgi" %]
  [% title = "Select Classification" %]
  [% subheader = "Please select the classification." %]
[% END %]

[% DEFAULT title = "Choose the classification" %]
[% PROCESS global/header.html.tmpl %]

<table>
  <tr>
    <th align="right">
      <a href="[% target | url_quote %]?classification=__all&[% query_params | html %]">All</a>:
    </th>

    <td valign="top">&nbsp;Show all products</td>
  </tr>
  <tr>
    <th colspan="2">&nbsp;</th>
  </tr>

[% FOREACH class = classifications %]
  <tr>
    <th align="right">
      <a href="[% target | url_quote %]?classification=[% class.name | url_quote -%]&[% query_params | html %]">[% class.name | html %]</a>:
    </th>

    [% IF class.description %]
      <td valign="top">&nbsp;[% class.description | html_light %]</td>
    [% END %]
  </tr>
[% END %]

</table>

[% IF user AND NOT cloned_bug_id AND user.in_group('importxls') %]
<hr>
<p class="importxls_link"><span>See also:</span> <a href="importxls.cgi">Mass bug import from Excel files</a>.</p>
[% END %]

[% PROCESS global/footer.html.tmpl %]
